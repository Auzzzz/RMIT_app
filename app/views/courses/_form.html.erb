<%= form_for(@course) do |f| %>
 
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :desc %>
  <%= f.text_field :desc, class: 'form-control' %>

  <%= f.label :locations %>
  <%= f.select :locations, options_from_collection_for_select(@locations, :id, :name)%>
  
  <%= f.label :categories %>
  <%= f.select :categories, options_from_collection_for_select(@categories, :id, :name)%>
  
    <%= f.label :prerequisites %>
  <%= f.select :prerequisites, options_from_collection_for_select(@courses, :id, :name)%>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %> 